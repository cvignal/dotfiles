#!/bin/sh

rsync -amP --include='*.lua' --include='*/' --exclude='*' ~/dotfiles/config/nvim ~/.config/nvim/
rsync -amP --include='*/' ~/dotfiles/config/polybar ~/.config/polybar/
rsync -amP --include='*/' ~/dotfiles/config/rofi ~/.config/rofi/
rsync -amP --include='*/' ~/dotfiles/config/ranger ~/.config/ranger/
rsync -amP --include='*/' --exclude='.*' ~/dotfiles/config/zsh ~/.config/zsh/

cp ~/dotfiles/config/aliasrc ~/.config/aliasrc
cp ~/dotfiles/config/directories ~/.config/directories
cp ~/dotfiles/config/files ~/.config/files
cp ~/dotfiles/config/inputrc ~/.config/inputrc
cp ~/dotfiles/config/shortcutrc ~/.config/shortcutrc
cp ~/dotfiles/config/xinitrc ~/.config/xinitrc
cp ~/dotfiles/config/xprofile ~/.config/xprofile
cp ~/dotfiles/config/dunst/dunstrc ~/.config/dunst/dunstrc
cp ~/dotfiles/config/fontconfig/fonts.conf ~/.config/fontconfig/fonts.conf
cp ~/dotfiles/config/git/config ~/.config/git/config
cp ~/dotfiles/config/i3/config ~/.config/i3/config
cp ~/dotfiles/config/sxhkd/sxhkdrc ~/.config/sxhkd/sxhkdrc
cp ~/dotfiles/config/X11/* ~/.config/X11/
cp ~/dotfiles/config/zathura/* ~/.config/zathura/
