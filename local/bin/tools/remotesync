#!/bin/sh

rsync -amP --include='*.lua' --include='*/' --exclude='*' ~/dotfiles/config/nvim ~/.config/nvim/
rsync -amP --include='*/' ~/dotfiles/config/polybar ~/.config/polybar/
rsync -amP --include='*/' ~/dotfiles/config/rofi ~/.config/rofi/
rsync -amP --include='*/' ~/dotfiles/config/ranger ~/.config/ranger/
rsync -amP --include='*/' --exclude='.*' ~/dotfiles/config/zsh ~/.config/zsh/

cp ~/.config/aliasrc ~/dotfiles/config
cp ~/.config/directories ~/dotfiles/config
cp ~/.config/files ~/dotfiles/config
cp ~/.config/inputrc ~/dotfiles/config
cp ~/.config/shortcutrc ~/dotfiles/config
cp ~/.config/xinitrc ~/dotfiles/config
cp ~/.config/xprofile ~/dotfiles/config
cp ~/.config/dunst/dunstrc ~/dotfiles/config/dunst/
cp ~/.config/fontconfig/fonts.conf ~/dotfiles/config/fontconfig/
cp ~/.config/git/config ~/dotfiles/config/git/
cp ~/.config/i3/config ~/dotfiles/config/i3/
cp ~/.config/sxhkd/sxhkdrc ~/dotfiles/config/sxhkd/
cp ~/.config/X11/* ~/dotfiles/config/X11/
cp ~/.config/zathura/zathurarc ~/dotfiles/config/zathura/
